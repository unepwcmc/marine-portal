<div class="outer-container group">
    <div class="container">
        <div class="dataset-title about-title">
            <ul>
                <li class="gray detail">Licence</li>
                <li class="information"><%= @licence.title %></li>
            </ul>
        </div>

        <div class="about-content group">
            <ul>
                <li class="title">
                    <p>Description</p>
                </li>
                <li class="information">
                    <p><%= RedCloth.new(@licence.body).to_html.html_safe %></p>
                </li>
            </ul>
            <ul>
                <li class="title">
                    <p>Updated at</p>
                </li>
                <li class="information">
                    <p><%= @licence.updated_at.strftime('%d/%m/%y') %></p>
                </li>
            </ul>
        </div>
    </div> <!-- .container -->
</div> <!-- .outer-container -->
