<h1>Listing customers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Institution</th>
    <th>Intended use</th>
    <th>Licence agreed</th>
    <th>Licence</th>
    <th>Dataset</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%=h customer.title %></td>
    <td><%=h customer.first_name %></td>
    <td><%=h customer.last_name %></td>
    <td><%=h customer.email %></td>
    <td><%=h customer.institution %></td>
    <td><%=h customer.intended_use %></td>
    <td><%=h customer.licence_agreed %></td>
    <td><%=h customer.licence_id %></td>
    <td><%=h customer.dataset_id %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

