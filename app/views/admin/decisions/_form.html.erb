
<% form_for([:admin,@decision], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short_name %><br />
    <%= f.text_field :short_name %>
  </p>
  <p>
    <%= f.label :short_desc %><br />
    <%= f.text_field :short_desc %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :group_parent %><br />
    <%= collection_select(:decision, :parent_id, Decision.all(:order => "name ASC"), :id, :name, {:prompt => true})%>
  </p>


  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
