<h1>Editing dataset</h1>

<% form_for(@dataset) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :short_desc %><br />
    <%= f.text_area :short_desc %>
  </p>
  <p>
    <%= f.label :long_desc %><br />
    <%= f.text_area :long_desc %>
  </p>
  <p>
    <%= f.label :metadata_description %><br />
    <%= f.text_area :metadata_description %>
  </p>
  <p>
    <%= f.label :shp_download %><br />
    <%= f.text_field :shp_download %>
  </p>
  <p>
    <%= f.label :wms %><br />
    <%= f.text_field :wms %>
  </p>
  <p>
    <%= f.label :wfs %><br />
    <%= f.text_field :wfs %>
  </p>
  <p>
    <%= f.label :meta_download %><br />
    <%= f.text_field :meta_download %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @dataset %> |
