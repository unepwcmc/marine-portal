<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head lang="en" xml:lang="en">
        <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
        <title>Ocean Data Viewer</title>
        <meta name="description" content="">
        <meta name="keywords" content="">

        <%= stylesheet_link_tag 'tipsy','facebox', 'marine', 'layout', 'jScrollPane.css' %>


        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>

        <%= javascript_include_tag 'OpenLayers', 'facebox', 'ie', 'jquery.textshadow.js', 'jquery.mousewheel.min.js', 'jquery.tipsy.js', 'jScrollPane.js', 'easySlider1.7', 'application' %>
    </head>

    <body>
      <% if flash[:error].present? %>
        <div id="error_flash">
          <h2>Sorry, there was a problem with your form submission</h2><%= flash[:error] %>
        </div>
      <% end %>
	<div id ="content_header">

            <div class="map">
                <div id="js_map">
                </div>
            </div>

            <div id="layout_header">
                <div id="header">
                    <div class="content_left">
                        <h1><a href="/">Ocean Data Viewer</a></h1>
                        <ul class="menu">
                            <li class="actual"><%= link_to "EXPLORE THE DATA", datasets_path %></li>
                            <li class="actual"><%= link_to "ABOUT", about_path %></li>
                            <li class="actual"><%= link_to "CONTACT", contact_path %></li>
                            <li class="actual"><%= link_to "BUSINESS", business_path %></li>
                        </ul>
                    </div>
                    <div class="content_right">
                        <ul class="info">

                            <li class="datasets">
                                <span class="icon"></span>
                                <p class="amount"><%= @dataset_count %></p>
                                <p class="title">DATASETS</p>
                            </li>
                            <li class="split"></li>
                            <li class="downloads">
                                <span class="icon"></span>
                                <p class="amount"><%= Customer.count %></p>
                                <p class="title">DOWNLOADS</p>
                            </li>
                        </ul>

                    </div>
                </div> <!-- header -->
                <div id="down_databases_info">
                    <%= yield :map_controls %>
                    <span id="bottom_scrollable_databases"></span>
                </div> <!-- down_databases_info -->

                <div id="zoom_buttons">
                    <a id="zoomIn"></a>
                    <a id="zoomOut"></a>
                </div>
            </div> <!-- layout_header -->
	</div> <!-- content_header -->

        <%= yield :map%>
 	<div id="outer_layout">
            <div id="layout">

              <%= yield %>

              <div id="footer_supportsites">
                  <div class="content_left">
                      <p>Other UNEP-WCMC Online Tools</p>
                  </div>
                  <div class="content_right">
                      <div id="slider">
                          <ul>
                             <% @site_links.each_with_index do |site_link, i| %>
                               <%= "<li>" if i.even? %>
                                  <div <%= "class='last'" if (i.odd? || (i == (@site_links.size - 1))) %>>
                                      <%= link_to site_link.title, site_link.link, :class => "site_support" %>
                                      <%= RedCloth.new(site_link.body).to_html() %>
                                  </div>
                               <%= "</li>" if (i.odd? || (i == (@site_links.size - 1))) %>
                            <% end %>
                          </ul>
                      </div>
                  </div> <!-- content_right -->
              </div>  <!-- footer_supportsites -->
              <div id="footer" class="datasets">
                  <%= image_tag 'proteus_sm.gif' %>&nbsp;&nbsp;&nbsp;<%= image_tag 'defra_sm.gif' %>
                  <a href="http://www.unep-wcmc.org/" target="_blank" class="wcmc_unep"></a>
                  <div class="reserved">

                          <p>All rights reserved.</p>
                          <p>UNEP-WCMC</p>
                  </div>
              </div> <!-- footer -->
            </div> <!-- layout -->
	</div> <!-- outer_layout -->
    </body>
</html>
