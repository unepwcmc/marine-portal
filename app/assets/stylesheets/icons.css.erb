@font-face {
  font-family: 'fontello';
  src: url(<%= asset_path 'fontello.eot?41452610' %>);
  src: url(<%= asset_path 'fontello.eot?41452610#iefix' %>) format('embedded-opentype'),
       url(<%= asset_path 'fontello.woff?41452610' %>) format('woff'),
       url(<%= asset_path 'fontello.ttf?41452610' %>) format('truetype'),
       url(<%= asset_path 'fontello.svg?41452610#fontello' %>) format('svg');
  font-weight: normal;
  font-style: normal;
}
