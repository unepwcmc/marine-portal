.datasets {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}

.datasets h1 {
  display: block;
  background: #E8E7E5;
  color: #6B6B6A;
  height: 40px;
  font: 16px/40px 'MuseoSans-500', sans-serif;
  line-height: 40px;
  padding: .15em 1em 0 1em;
}

.scroll-pane {
  width: 383px;
  height: 590px; /* 630px - 40px (h1 height) */
  background-color: #F8F7F4;
  overflow: auto;
}

.scroll-pane:focus { outline: none; }

.dataset-list li {
  cursor: pointer;
  border: 1px solid #ddd;
}

.dataset-list a {
  text-decoration: none;
  color: inherit;
}

.dataset-list a.title {
  display: inline-block;
  margin: .5em 0 .25em;
  color: #4295D5;
  font: 15px 'MuseoSans-500';
  max-width: 20em;
}

.dataset-list li:hover a.title {
  text-decoration: underline;
}

.dataset-list li {
  color: #999;
  position: relative;
}

.dataset-list .icon-angle-circled-right {
  display: none;
  position: absolute;
  top: 1.5em;
  right: 1.5em;
  color: #4295D5;
  line-height: 1.75em;
}

.dataset-list li:hover .icon-angle-circled-right {
  display: block;
}

.dataset-list li + li {
  border-top: none;
}

.dataset-list li:hover, .dataset-list li.active {
  background-color: white;
}

.dataset-list .dataset-info {
  padding: 1em;
  margin-left: 16px;
  border-right: 7px solid transparent;
}

.dataset-info span {
  display: inline-block;
  vertical-align: middle;
}

.dataset-info > span, .additional-info > span {
  margin: .75em .25em .75em 0;
}

.dataset-info .category {
  max-width: 22em;
}

span + .prepend-pipe {
  border-left: 1px solid #D4D4D4;
  padding-left: .5em;
}

.prepend-symbol {
  padding-left: 1.4em;
  background-repeat: no-repeat;
  background-position: top left;
}

span + .prepend-symbol {
  background-position: 7% top;
  padding-left: 1.7em;
}

.point {
  background-image: url(<%= asset_path 'point.svg' %>);
}

.polygon {
  background-image: url(<%= asset_path 'polygon.svg' %>);
}

.raster {
  background-image: url(<%= asset_path 'raster.svg' %>);
}

.dataset-list .arrow {
  display: none;
  color: #4295D5;
  float: right;
  margin-top: -1.2em;
}

.dataset-list .arrow span {
  vertical-align: initial;
}

.dataset-list li:hover .arrow {
  display: block;
}

.dataset-list .additional-info {
  position: relative;
  overflow: hidden;
  height: 0;
  opacity: 0;
  -webkit-transition: height 200s,
    min-height 200ms,
    margin-top 200ms,
    padding-top 200ms,
    overflow 200ms,
    border-top 200ms,
    opacity 200ms;
  -moz-transition: height 200s,
    min-height 200ms,
    margin-top 200ms,
    padding-top 200ms,
    overflow 200ms,
    border-top 200ms,
    opacity 200ms;
  -ms-transition: height 200s,
    min-height 200ms,
    margin-top 200ms,
    padding-top 200ms,
    overflow 200ms,
    border-top 200ms,
    opacity 200ms;
  -o-transition: height 200s,
    min-height 200ms,
    margin-top 200ms,
    padding-top 200ms,
    overflow 200ms,
    border-top 200ms,
    opacity 200ms;
  transition: height 200s,
    min-height 200ms,
    margin-top 200ms,
    padding-top 200ms,
    overflow 200ms,
    border-top 200ms,
    opacity 200ms;
}

.dataset-list .additional-info.visible {
  border-top: 1px solid #DDD;
  min-height: 2em;
  overflow: visible;
  height: auto;
  margin-top: 1em;
  padding-top: .5em;
  opacity: 1;
}

.dataset-list .buttons {
  position: absolute;
  top: 1em;
  right: 0;
  color: #4295D5;
  font-size: 14px;
}

.dataset-list .buttons a {
  display: inline-block;
  vertical-align: middle;
  width: 14px;
  height: 14px;
  margin: 0 0 0 .25em;
  transition: all .5s;
}

.dataset-list .buttons a:hover {
  color: #377DB4;
}

.dataset-list .buttons .icon-esri {
  display: inline-block;
  width: 14px;
  height: 14px;
  background: url(<%= asset_path 'esri-logo.svg' %>) no-repeat center center;
  transition: none;
}

.dataset-list .icon-esri:hover {
  background-image: url(<%= asset_path 'esri-logo-hover.svg' %>);
}

